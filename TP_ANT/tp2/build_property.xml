<?xml version="1.0" encoding="UTF-8"?>

<project name="monProjet" default="init" basedir=".">
    <!-- Les properties-->
    <property name="projet.nom" value="Vive l'AFPA" />
    <property name="projet.version" value="50.9.5.12.333.41"/>


    <!-- Initialisation-->
    <target name="init">
        <echo message="Initialisation du projet ${projet.nom}" />
        <mkdir dir="${basedir}/r1" />
        <mkdir dir="${basedir}/r2" />
    </target>

    <!-- Nettoyage-->
    <target name="clean">
        <echo message="Nettoyage du projet ${projet.nom}" />
        <delete dir="${basedir}/r1" />
        <delete dir="${basedir}/r2" />
    </target>
</project>